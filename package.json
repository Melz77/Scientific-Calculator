{
  "name": "scientific-calculator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.json && cp src/index.html dist/index.html && cp src/styles.css dist/styles.css",
